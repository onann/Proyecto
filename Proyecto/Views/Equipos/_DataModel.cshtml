        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(m => m.idClub)</br>
            </small>
            @Html.DropDownListFor(model => model.idClub, new SelectList(ViewBag.Clubes, "idClub", "Nombre"))
                <small>
                    @Html.ValidationMessageFor(m => m.idClub)
                </small>
        </div>

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Nombre, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la Nombre" })
            <small>
                @Html.ValidationMessageFor(model => model.Nombre)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idLiga, new { @class = "control-label" })
            </small>
            @Html.DropDownListFor(model => model.idLiga, new SelectList(ViewBag.Ligas, "idLiga", "nombre"))
            <small>
                @Html.ValidationMessageFor(model => model.idLiga)
            </small>
        </div>
    </div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
{

    <div class="col-xs-12 alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @ViewBag.ErrorMensaje
    </div>

}



