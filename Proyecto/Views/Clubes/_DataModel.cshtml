@model Proyecto.Models.Clubes.Clubes

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.idClub)

<div class="col-md-12">
    <div class="col-md-3">

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
            </small>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control input-sm ", style = "max-width: 100%;", placeholder = "Introduzca el nombre" })
            <small>
                @Html.ValidationMessageFor(model => model.Nombre)
            </small>
        </div>

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Localidad, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Localidad, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la localidad" })
            <small>
                @Html.ValidationMessageFor(model => model.Localidad)
            </small>
        </div>


    </div>
    <div class="col-md-9">
        <div class="form-group input-group-sm col-md-12">
            <small>
                @Html.LabelFor(m => m.Telefono)
            </small>
            @Html.TextAreaFor(m => m.Telefono, 8, 0, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca el teléfono" })
            <small>
                @Html.ValidationMessageFor(m => m.Telefono)
            </small>
        </div>

    </div>
</div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
{

    <div class="col-xs-12 alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @ViewBag.ErrorMensaje
    </div>

}



