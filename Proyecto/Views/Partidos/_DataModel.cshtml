@model Proyecto.Models.Partidos.Partidos

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.idPartido)

<div class="col-md-12">
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.idLiga, new { @Value = ViewBag.idLiga, @type = "hidden" })



        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idEquipoLocal, new { @class = "control-label" })
            </small>
            @Html.DropDownListFor(model => model.idEquipoLocal, new SelectList(ViewBag.Equipos, "idEquipo", "Nombre"))
            <small>
                @Html.ValidationMessageFor(model => model.idEquipoLocal)
            </small>
        </div>

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idEquipoVisitante, new { @class = "control-label" })
            </small>
            @Html.DropDownListFor(model => model.idEquipoVisitante, new SelectList(ViewBag.Equipos, "idEquipo", "Nombre"))
            <small>
                @Html.ValidationMessageFor(model => model.idEquipoVisitante)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Date, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Date, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la Date" })
            <small>
                @Html.ValidationMessageFor(model => model.Date)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idCampo, new { @class = "control-label" })
            </small>
            @Html.DropDownListFor(model => model.idCampo, new SelectList(ViewBag.Campos, "idCampo", "Nombre"))
            <small>
                @Html.ValidationMessageFor(model => model.idCampo)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idArbitro, new { @class = "control-label" })
            </small>
            @Html.DropDownListFor(model => model.idArbitro, new SelectList(ViewBag.Arbitros, "idArbitro", "Nombre"))
            <small>
                @Html.ValidationMessageFor(model => model.idArbitro)
            </small>
        </div>

    </div>

</div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
{

    <div class="col-xs-12 alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @ViewBag.ErrorMensaje
    </div>

}

