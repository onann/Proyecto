@model Proyecto.Models.Jugadores.Jugadores

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.idJugador)
<div class="col-md-12">
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.idEquipo, new { @Value = ViewBag.idEquipo, @type = "hidden" })
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
            </small>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control input-sm ", style = "max-width: 100%;", placeholder = "Introduzca el nombre" })
            <small>
                @Html.ValidationMessageFor(model => model.Nombre)
            </small>
        </div>

        @*<div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idEquipo, new { @class = "control-label" })
            </small>
            @Html.DropDownListFor(model => model.idEquipo, new SelectList(ViewBag.Equipos, "idEquipo", "Nombre"))
            <small>
                @Html.ValidationMessageFor(model => model.idEquipo)
            </small>
        </div>*@

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Apellido1, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Apellido1, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la Apellido1" })
            <small>
                @Html.ValidationMessageFor(model => model.Apellido1)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Apellido2, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Apellido2, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la Apellido2" })
            <small>
                @Html.ValidationMessageFor(model => model.Apellido2)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(m => m.fechaIntroducida)
            </small>
            @Html.TextBoxFor(m => m.fechaIntroducida, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "dd/MM/yyyy" })
            <small>
                @Html.ValidationMessageFor(m => m.fechaIntroducida)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Peso, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Peso, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca el peso en kg" })
            <small>
                @Html.ValidationMessageFor(model => model.Peso)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Altura, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Altura, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la altura en cm" })
            <small>
                @Html.ValidationMessageFor(model => model.Altura)
            </small>
        </div>




    </div>
    

    
</div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
{

    <div class="col-xs-12 alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @ViewBag.ErrorMensaje
    </div>

}



