@model Proyecto.Models.CategoriaSanciones.CategoriaSanciones

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.idCategoriaSancion)

<div class="col-md-12">
    <div class="col-md-3">

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
            </small>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control input-sm ", style = "max-width: 100%;", placeholder = "Introduzca el nombre" })
            <small>
                @Html.ValidationMessageFor(model => model.Nombre)
            </small>
        </div>

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la Descripcion" })
            <small>
                @Html.ValidationMessageFor(model => model.Descripcion)
            </small>
        </div>

</div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
{

    <div class="col-xs-12 alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @ViewBag.ErrorMensaje
    </div>

}



