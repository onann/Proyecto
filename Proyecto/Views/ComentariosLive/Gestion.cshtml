@{
    ViewBag.Title = "Gestionar ComentarioLive";
}

<div style="padding: 10px 0px 5px 0px;">
    <p id="warningMessage" class=" bg-warning  text-warning"></p>
</div>

<ul id="tabs" class="nav nav-tabs na" data-tabs="tabs">


    @if (ViewBag.NuevoComentarioLive == true)
    {
        <li class="active"><a href="#general" data-toggle="tab">Nuevo Comentario</a></li>
    }

</ul>

<div style="padding: 30px 30px 0px 30px;">

    <div id="my-tab-content" class="tab-content">

        <div class="tab-pane fade active in ajaxPartialContents" id="general" data-url="@Url.Action(ViewBag.NuevoComentarioLive ? "AjaxCreate" : "AjaxDetails", "ComentariosLive", ViewBag.NuevoComentarioLive ? new { id = ViewBag.idLive} : new
                                                                                   {
                                                                                       id = ViewBag.idComentario})">
            
        </div>

    </div>
</div>


<script type="text/javascript">

    $(document).ready(function (e) {

        // Cargamos asincronamente las secciones parciales que tienen establecida una URL.
        $(".ajaxPartialContents").each(function (index, item) {
            var url = $(item).data("url");
            if (url && url.length > 0) {
                $(item).load(url);
            }
        });
    });

    function CheckSuccess(result) {
        if (result.success == true) {
            if (result.reload) document.location.reload();
            if (result.redirect != null) document.location.href = result.redirect;
        };
    };



</script>

