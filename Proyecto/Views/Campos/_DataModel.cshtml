@model Proyecto.Models.Campos.Campos
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.idCampo)

<div class="col-md-12">
    <div class="col-md-3">
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.Nombre, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca el nombre" })
            <small>
                @Html.ValidationMessageFor(model => model.Nombre)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(m => m.Direccion)
            </small>
            @Html.TextAreaFor(m => m.Direccion, 8, 0, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la dirección" })
            <small>
                @Html.ValidationMessageFor(m => m.Direccion)
            </small>
        </div>
        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idEquipo, new { @class = "control-label" })
            </small>
            @Html.DropDownListFor(model => model.idEquipo, new SelectList(ViewBag.Equipos, "idEquipo", "Nombre"))
            <small>
                @Html.ValidationMessageFor(model => model.idEquipo)
            </small>
        </div>
        
        


    </div>
    <div class="col-md-9">
        

    </div>
</div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
{

    <div class="col-xs-12 alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @ViewBag.ErrorMensaje
    </div>

}



