@model Proyecto.Models.Categoria_Ligas.Categoria_Ligas

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.idCategoriaLigas)

<div class="col-md-12">
    <div class="col-md-3">

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.idCategoriaLigas, new { @class = "control-label" })
            </small>
            @Html.TextBoxFor(model => model.idCategoriaLigas, new { @class = "form-control input-sm ", style = "max-width: 100%;", placeholder = "Introduzca el idCategoriaLigas" })
            <small>
                @Html.ValidationMessageFor(model => model.idCategoriaLigas)
            </small>
        </div>

        <div class="form-group input-group-sm">
            <small>
                @Html.LabelFor(model => model.NombreCategoria, new { @class = "control-label" })
            </small>
            @Html.TextAreaFor(model => model.NombreCategoria, new { @class = "form-control ckeditor", style = "max-width: 100%;", placeholder = "Introduzca la NombreCategoria" })
            <small>
                @Html.ValidationMessageFor(model => model.NombreCategoria)
            </small>
        </div>


    </div>
    
</div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
{

    <div class="col-xs-12 alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @ViewBag.ErrorMensaje
    </div>

}



